@model WebAppClient.ViewModels.DashboardVM

@{
    ViewData["Title"] = "Index";
}

<h2>Dashboard</h2>

<div class="container">
    <div class="row">
        <div class="col-lg-4" style="background-color:lightblue;border-style:solid;font-size:1.5em">  @string.Format($"Amount Of Open Tickets: {Model.OpenTickets.Count()} / {Model.AllTickets.Count()}") </div>
        <div class="col-lg-4"></div>
        <div class="col-lg-4" style="background-color:lightblue;border-style:solid;font-size:1.5em">  @string.Format($"Overdue Tickets: {Model.OverdueTickets.Count()}") </div>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
